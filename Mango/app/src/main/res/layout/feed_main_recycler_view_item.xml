<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="8dp"
       android:orientation="vertical">

       <LinearLayout
           android:id="@+id/profile_bar"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="@android:color/white"
           android:orientation="horizontal"
           android:paddingStart="12dp"
           android:transitionName="profile_bar">

           <com.mikhaellopez.circularimageview.CircularImageView
               android:id="@+id/main_item_profile_pic"
               android:layout_width="44dp"
               android:layout_marginTop="5dp"
               android:layout_marginBottom="5dp"
               android:layout_height="44dp"
               android:background="@drawable/ic_user_pic"
               app:civ_border="false" />

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
               android:layout_weight="1"
               android:orientation="vertical">

               <TextView
                   android:id="@+id/main_item_title"
                   android:layout_width="1399dp"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="12dp"
                   android:text="No Network Available"
                   android:textColor="@color/colorPrimary"
                   android:textSize="16sp"
                   android:textStyle="bold" />

               <TextView
                   android:id="@+id/sub_title"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="12dp"
                   android:text="No Network Available"
                   android:textColor="@android:color/darker_gray"
                   android:textSize="14sp"
                   android:visibility="visible"/>

           </LinearLayout>

           <ImageView
               android:id="@+id/main_item_menu_img"
               android:layout_width="39dp"
               android:layout_height="match_parent"
               android:paddingEnd="12dp"
               android:paddingStart="12dp"
               android:src="@drawable/ic_menu" />

       </LinearLayout>

       <TextView
           android:id="@+id/main_item_event_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="12dp"
           android:layout_marginTop="5dp"
           android:layout_marginBottom="5dp"
           android:text="No Network Available"
           android:textColor="@color/colorPrimary"
           android:textSize="18sp"
           android:textStyle="bold"
           android:visibility="gone"/>

       <TextView
           android:id="@+id/main_item_date"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="start"
           android:layout_marginStart="12dp"
           android:layout_marginTop="8dp"
           android:layout_marginBottom="12dp"
           android:text="No Network Available"
           android:textColor="@color/colorPrimary"
           android:visibility="gone"/>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <TextView
               android:id="@+id/main_item_description"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="5dp"
               android:ellipsize="end"
               android:maxLines="12"
               android:text="No Network Available"
               android:textColor="@color/colorPrimary"
               android:textSize="16sp"
               android:paddingStart="17dp"
               android:paddingEnd="12dp"/>

           <TextView
               android:id="@+id/main_item_people_count"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
               android:layout_marginStart="12dp"
               android:layout_marginEnd="12dp"
               android:layout_marginBottom="12dp"
               android:text="No Network Available"
               android:textColor="@color/colorPrimary"
               android:textSize="14sp"
               android:visibility="gone"/>

       </LinearLayout>

       <android.support.v7.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="5dp"
           app:cardCornerRadius="20dp">

           <ImageView
               android:id="@+id/main_item_main_image"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:transitionName="main_item_main_image"
               tools:src="@drawable/picture"/>

       </android.support.v7.widget.CardView>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:visibility="gone">

               <TextView
                   android:id="@+id/main_post_likes"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:text="50"
                   android:gravity="center"
                   android:textSize="17sp"
                   android:textColor="@color/colorPrimary"
                   android:visibility="gone"/>

           </LinearLayout>

           <ImageView
               android:id="@+id/main_item_like_btn"
               android:layout_width="44dp"
               android:layout_height="44dp"
               android:padding="10dp"
               android:src="@drawable/notliked"
               android:layout_weight="1"/>

           <ImageView
               android:id="@+id/main_item_comment_btn"
               android:layout_width="44dp"
               android:layout_height="44dp"
               android:paddingTop="10dp"
               android:paddingBottom="10dp"
               android:src="@drawable/comment_icon"
               android:layout_gravity="end"
               android:layout_weight="1"/>

           <ImageView
               android:id="@+id/main_item_bookmark_btn"
               android:layout_width="44dp"
               android:layout_height="44dp"
               android:padding="10dp"
               android:src="@drawable/ic_bookmark_black"
               android:layout_gravity="center"
               android:layout_weight="1"/>

           <ImageView
               android:id="@+id/main_item_send_btn"
               android:layout_width="44dp"
               android:layout_height="44dp"
               android:paddingTop="7dp"
               android:paddingBottom="7dp"
               android:src="@drawable/paper_plane"
               android:layout_gravity="end"
               android:layout_weight="1"/>

       </LinearLayout>

       <Button
           android:id="@+id/delete_post_btn"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="HIDE POST"
           android:background="@drawable/button_background_stroke"
           android:textColor="#ff0000"
           android:layout_margin="12dp"/>

   </LinearLayout>

</android.support.v7.widget.CardView>